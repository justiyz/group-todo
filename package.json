{
  "name": "todo-backend-express-knex",
  "version": "1.0.0",
  "scripts": {
    "heroku-postbuild": "cd server && npx knex migrate:latest",
    "client": "cd client && yarn start",
    "server": "cd server && nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "test": "cd server && jest",
    "test:watch": "cd server && jest --watch",
    "start": "cd server && node server.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.19.0",
    "crypto": "^1.0.1",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.13",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "jest": "^24.9.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "knex": "^0.21.0",
    "lodash": "^4.17.15",
    "nodemon": "^2.0.2",
    "pg": "^8.0.0",
    "supertest": "^4.0.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "concurrently": "^4.0.1"
  }
}
